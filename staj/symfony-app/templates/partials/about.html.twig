<section id="about" class="gothic-about py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-moon gothic-section-icon text-purple me-3"></i>
                    {# about_section_title anahtarını kullanıyor #}
                    <h2 class="gothic-section-title gothic-gradient-text mb-0">{{ 'about_section_title'|trans }}</h2>
                </div>

                <p class="gothic-about-text mb-4">
                    {# about_text_part1 anahtarını kullanıyor ve %years% değişkenini doğru aktarıyor #}
                    {{ 'about_text_part1'|trans({'%years%': stats.years_experience}) }}
                </p>

                <p class="gothic-about-text mb-5">
                    {# about_text_part2 anahtarını kullanıyor #}
                    {{ 'about_text_part2'|trans }}
                </p>

                <div class="row">
                    <div class="col-6">
                        <div class="gothic-about-stat">
                            <i class="fas fa-skull gothic-stat-icon text-danger"></i>
                            <div class="gothic-stat-number text-danger">{{ stats.years_experience }}</div>
                            {# years_dark_art anahtarını kullanıyor #}
                            <div class="gothic-stat-label">{{ 'years_dark_art'|trans }}</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="gothic-about-stat">
                            <i class="fas fa-crown gothic-stat-icon text-purple"></i>
                            <div class="gothic-stat-number text-purple">100%</div>
                            {# handmade_magic anahtarını kullanıyor #}
                            <div class="gothic-stat-label">{{ 'handmade_magic'|trans }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="gothic-about-image">
                    <img src="{{ asset('assets/image/products/logo.jpg') }}" style="width: 400px" alt="Gotik sanat eserleri" class="img-fluid rounded gothic-shadow">

                    <div class="gothic-floating-badge gothic-workshop-badge">
                        <i class="fas fa-eye text-danger"></i>
                        {# mystic_workshop anahtarını kullanıyor #}
                        <span>{{ 'mystic_workshop'|trans }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
