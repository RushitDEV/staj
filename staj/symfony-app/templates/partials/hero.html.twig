<section class="gothic-hero">
    <div class="gothic-hero-bg"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="gothic-hero-content">
                    <div class="d-flex align-items-center mb-4">
                        <i class="fas fa-moon gothic-moon-icon me-3"></i>
                        <span class="gothic-subtitle">{{ 'hero_subtitle'|trans }}</span>
                    </div>

                    <h2 class="gothic-hero-title mb-6">
                        {{ 'hero_title'|trans }}
                    </h2>

                    <p class="gothic-hero-description mb-5">
                        {{ 'hero_description'|trans }}
                    </p>

                    <div class="gothic-hero-buttons mb-5">
                        <a href="#products" class="btn gothic-btn-primary btn-lg me-3">
                            <i class="fas fa-fire me-2"></i>{{ 'hero_button_explore'|trans }}
                        </a>
                        <a href="https://www.etsy.com/shop/Gothizen?ref=dashboard-header&dd_referrer=https%3A%2F%2Fwww.etsy.com%2Fyour%2Fshops%2Fme%2Fdashboard%3Fref%3Dhdr-mcpa" target="_blank" class="btn gothic-btn-outline btn-lg">
                            <i class="fas fa-external-link-alt me-2"></i>{{ 'hero_button_etsy'|trans }}
                        </a>
                    </div>

                    <div class="row gothic-stats">
                        <div class="col-4">
                            <div class="gothic-stat-card">
                                <div class="gothic-stat-number text-danger">{{ stats.total_sales }}</div>
                                <div class="gothic-stat-label">{{ 'stat_dark_item'|trans }}</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="gothic-stat-card">
                                <div class="gothic-stat-number text-purple">{{ stats.happy_customers }}+</div>
                                <div class="gothic-stat-label">{{ 'stat_dark_soul'|trans }}</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="gothic-stat-card">
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <i class="fas fa-star text-warning me-1"></i>
                                    <span class="gothic-stat-number text-warning">{{ stats.average_rating }}</span>
                                </div>
                                <div class="gothic-stat-label">{{ 'stat_mystic_rating'|trans }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="gothic-hero-image">
                    <img src="{{ asset('assets/image/products/product1.jpg') }}" alt="Gotik sanat eserleri" class="img-fluid rounded gothic-shadow">
                </div>
            </div>
        </div>
    </div>
</section>
