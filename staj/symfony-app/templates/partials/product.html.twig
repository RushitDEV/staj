<section id="products" class="gothic-products py-5">
    <div class="container">
        <div class="text-center mb-5">
            <div class="d-flex align-items-center justify-content-center mb-4">
                <i class="fas fa-fire gothic-section-icon text-danger me-3"></i>
                <h2 class="gothic-section-title gothic-gradient-text mb-0">{{ 'products_section_title'|trans }}</h2>
                <i class="fas fa-fire gothic-section-icon text-danger ms-3"></i>
            </div>
            <p class="gothic-section-subtitle">{{ 'products_section_subtitle'|trans }}</p>
        </div>

        <div class="row g-4">
            {% for product in featured_products %}
                <div class="col-lg-4 col-md-6">
                    <div class="gothic-product-card">
                        <div class="gothic-product-image">
                            {# product.name'i alt niteliğine güvenli bir şekilde basmak için |e('html_attr') kullanıldı #}
                            <img src="{{ product.image }}" alt="{{ product.name|e('html_attr') }}" class="img-fluid">
                            <div class="gothic-product-overlay">
                                <div class="gothic-product-overlay-content">
                                    <a href="{{ product.etsy_url }}" target="_blank" class="btn gothic-btn-primary">
                                        <i class="fas fa-external-link-alt me-2"></i>{{ 'product_overlay_button'|trans }}
                                    </a>
                                </div>
                            </div>

                            {% if product.stock_status == 'in_stock' %}
                                <div class="gothic-product-badge">
                                    <i class="fas fa-skull me-1"></i>{{ 'product_stock_available'|trans }}
                                </div>
                            {% endif %}
                        </div>

                        <div class="gothic-product-content">
                            <h3 class="gothic-product-title">{{ product.name }}</h3> {# Dinamik içerik, çevrilmez #}
                            {# product.description'ı HTML içeriğine güvenli bir şekilde basmak için |e('html') kullanıldı #}
                            <p class="gothic-product-description">{{ product.description|e('html') }}</p> {# Dinamik içerik, çevrilmez #}

                            <div class="d-flex justify-content-between align-items-center">
                                <span class="gothic-product-price">{{ product.price }} {{ product.currency }}</span> {# Dinamik içerik, çevrilmez #}
                                <a href="{{ product.etsy_url }}" target="_blank" class="btn gothic-btn-sm">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="text-center mt-5">
            <a href="https://www.etsy.com/shop/Gothizen?ref=dashboard-header&dd_referrer=https%3A%2F%2Fwww.etsy.com%2Fyour%2Fshops%2Fme%2Fdashboard%3Fref%3Dhdr-mcpa" target="_blank" class="btn gothic-btn-outline btn-lg">
                <i class="fas fa-external-link-alt me-2"></i>{{ 'explore_all_products_button'|trans }}
            </a>
        </div>
    </div>
</section>
